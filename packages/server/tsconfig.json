{
   "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}