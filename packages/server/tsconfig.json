{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["ES2024", "DOM"],
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    //"esModuleInterop": true,
    "types": ["node"],
    //"rootDir": "src",
    // "outDir": "./dist", pointless due to noEmit
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
