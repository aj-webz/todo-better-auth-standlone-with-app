    "/api/todos": {
      "get": {
        "operationId": "getApiTodos",
        "description": "Get all todos",
        "responses": {
          "200": {
            "description": "Todos retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string",
                        "enum": [
                          "todo",
                          "in-progress",
                          "backlog",
                          "completed",
                          "cancelled"
                        ]
                      },
                      "completed": {
                        "type": "boolean"
                      },
                      "createdAt": {
                        "type": "string"
                      },
                      "endAt": {
                        "type": [
                          "string",
                          "null"
                        ]
                      }
                    },
                    "required": [
                      "id",
                      "title",
                      "description",
                      "status",
                      "completed",
                      "createdAt",
                      "endAt"
                    ]
