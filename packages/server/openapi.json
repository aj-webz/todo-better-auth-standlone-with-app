        "operationId": "postApiTodos",
        "description": "Create new todo",
        "responses": {
          "201": {
            "description": "Todo created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "todo",
                        "in-progress",
                        "backlog",
                        "completed",
                        "cancelled"
                      ]
                    },
                    "completed": {
                      "type": "boolean"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "endAt": {
                      "type": [
                        "string",
                        "null"
                      ]
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "description",
                    "status",
                    "completed",
                    "createdAt",
                    "endAt"
