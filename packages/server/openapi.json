                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1
                  },
                  "dueDate": {
                    "type": "string"
                  },
                  "dueTime": {
                    "type": "string",
                    "pattern": "^([01]\\d|2[0-3]):([0-5]\\d):([0-5]\\d)$"
                  }
                },
                "required": [
                  "title",
                  "description",
                  "dueDate",
                  "dueTime"
                ]
              }
            }
          }
        }
      }
