{
  "name": "@repo/api",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "main": "./index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": [
      "./src/index.ts",
      "./index.js"
    ]
  },
  "scripts": {
    "dev": "pnpm exec tsx watch --require dotenv/config src/index.ts",
    "build": "tsc --noEmit && tsup",
    "start": "node ./index.js",
    "build:spec": "pnpm exec tsx scripts/gen-spec.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@repo/db": "workspace:*",
    "@repo/shared": "workspace:*",
    "better-auth": "^1.4.18",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "nanoid": "^5.1.1",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "dotenv-cli": "^11.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
