{
  "openapi": "3.1.0",
  "servers": [{ "url": "/api" }],
  "info": {
    "title": "Hono Documentation",
    "description": "Development documentation",
    "version": "0.0.0"
  },
  "paths": {
    "/api/todos": {
      "get": {
        "operationId": "getApiTodos",
        "description": "Get all todos",
        "responses": {
          "200": {
            "description": "Todos retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "title": { "type": "string" },
                      "description": { "type": "string" },
                      "status": {
                        "type": "string",
                        "enum": [
                          "todo",
                          "in-progress",
                          "backlog",
                          "completed",
                          "cancelled"
                        ]
                      },
                      "completed": { "type": "boolean" },
                      "createdAt": { "type": "string" },
                      "endAt": {
                        "anyOf": [{ "type": "string" }, { "type": "null" }]
                      },
                      "completedAt": {
                        "anyOf": [{ "type": "string" }, { "type": "null" }]
                      }
                    },
                    "required": [
                      "id",
                      "title",
                      "description",
                      "status",
                      "completed",
                      "createdAt",
                      "endAt",
                      "completedAt"
                    ]
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } },
                  "required": ["error"]
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "postApiTodos",
        "description": "Create new todo",
        "responses": {
          "201": {
            "description": "Todo created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "description": { "type": "string" },
                    "status": {
                      "type": "string",
                      "enum": [
                        "todo",
                        "in-progress",
                        "backlog",
                        "completed",
                        "cancelled"
                      ]
                    },
                    "completed": { "type": "boolean" },
                    "createdAt": { "type": "string" },
                    "endAt": {
                      "anyOf": [{ "type": "string" }, { "type": "null" }]
                    },
                    "completedAt": {
                      "anyOf": [{ "type": "string" }, { "type": "null" }]
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "description",
                    "status",
                    "completed",
                    "createdAt",
                    "endAt",
                    "completedAt"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } },
                  "required": ["error"]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } },
                  "required": ["error"]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "minLength": 1 },
                  "description": { "type": "string", "minLength": 1 },
                  "endAt": {
                    "type": "string",
                    "format": "date-time",
                    "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z))$"
                  }
                },
                "required": ["title", "description", "endAt"]
              }
            }
          }
        }
      }
    },
    "/api/todos/{id}/status": {
      "patch": {
        "operationId": "patchApiTodosByIdStatus",
        "description": "Update todo status",
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "description": { "type": "string" },
                    "status": {
                      "type": "string",
                      "enum": [
                        "todo",
                        "in-progress",
                        "backlog",
                        "completed",
                        "cancelled"
                      ]
                    },
                    "completed": { "type": "boolean" },
                    "createdAt": { "type": "string" },
                    "endAt": {
                      "anyOf": [{ "type": "string" }, { "type": "null" }]
                    },
                    "completedAt": {
                      "anyOf": [{ "type": "string" }, { "type": "null" }]
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "description",
                    "status",
                    "completed",
                    "createdAt",
                    "endAt",
                    "completedAt"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Invalid status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } },
                  "required": ["error"]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } },
                  "required": ["error"]
                }
              }
            }
          },
          "404": {
            "description": "Todo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } },
                  "required": ["message"]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "todo",
                      "in-progress",
                      "backlog",
                      "completed",
                      "cancelled"
                    ]
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "parameters": [
          {
            "schema": { "type": "string" },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    },
    "/api/todos/{id}": {
      "delete": {
        "operationId": "deleteApiTodosById",
        "description": "Delete todo",
        "responses": {
          "204": { "description": "Todo deleted", "content": {} },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } },
                  "required": ["error"]
                }
              }
            }
          },
          "404": {
            "description": "Todo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } },
                  "required": ["message"]
                }
              }
            }
          }
        },
        "parameters": [
          {
            "schema": { "type": "string" },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    }
  },
  "components": {}
}
